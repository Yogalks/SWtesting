
package task7;

import java.util.Scanner;

public class Divisionhandle {
	
	public static void main(String[] args)
	{
		try
		{
			Scanner s = new Scanner(System.in);
		
		System.out.println("Enter the first interger");
		int a = s.nextInt();
		System.out.println("Enter the second interger");
		int b =s.nextInt();
		int res = a/b;
		System.out.println("The result of the division is:" +res);
		}
		
		catch(ArithmeticException e)
		{
			System.out.println("The second integer cannot be zero please input a valid number");
			e.printStackTrace();
		}
		}

}

